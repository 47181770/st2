{
    "name": "sendmail",
    "runner_type": "run-local-script",
    "description": "This sends an email",
    "enabled": true,
    "entry_point": "send_mail/send_mail",
    "parameters": {
        "to": {
            "type": "string",
            "description": "Recipient email address.",
            "required": true,
            "position": 0
        },
        "subject": {
            "type": "string",
            "description": "Subject of the email.",
            "required": true,
            "position": 1
        },
        "body": {
            "type": "string",
            "description": "Body of the email.",
            "required": true,
            "position": 2
        },
        "sudo": {
            "immutable": true
        }
    }
}

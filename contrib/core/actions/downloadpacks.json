{
    "name": "downloadpacks",
    "runner_type": "run-python",
    "description": "Downloads packs and places it in the local content repository.",
    "enabled": true,
    "entry_point": "pack_mgmt/downloadpacks.py",
    "parameters": {
        "packs": {
            "type": "array",
            "items": {"type": "string"}
        },
        "repo_url": {
            "type": "string",
            "default": "git@github.com:StackStorm/st2-contrib.git",
            "immutable": true
        },
        "abs_repo_base": {
            "type": "string",
            "default": "/opt/stackstorm",
            "immutable": true
        }
    }
}

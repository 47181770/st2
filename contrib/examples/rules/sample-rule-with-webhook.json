{
    "name": "st2.webhook-sample",
    "description": "Sample rule dumping webhook payload to a file.",

    "trigger": {
        "type": "st2.webhook",
        "parameters": {
            "url": "sample"
        }
    },

    "criteria": {
        "name": {
            "pattern": "Joe",
            "type": "equals" 
         }
    },

    "action": {
        "name": "local",
        "parameters": {
            "cmd": "echo \"{{trigger}}\" >> /tmp/st2.rule1.out"
        }
    },

    "enabled": true
}

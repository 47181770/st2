{
    "chain": [
        {
            "name": "unregister",
            "ref": "core.unregisterpacks",
            "params": {"packs": "{{packs}}"},
            "on-success": "delete"
        },
        {
            "name": "delete",
            "ref": "core.deletepacks",
            "params": {"packs": "{{packs}}"},
            "on-success": "restart-sensor-container"
        },
        {
            "name": "restart-sensor-container",
            "ref": "core.restart-component",
            "params": {"servicename": "sensor_containesr"}
        }
    ],
    "default": "unregister"
}


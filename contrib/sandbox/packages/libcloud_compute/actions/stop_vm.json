{
    "name": "stop_vm",
    "runner_type": "run-local-script",
    "description": "Stop a running VM.",
    "enabled": true,
    "entry_point": "stop_vm.py",
    "parameters": {
        "credentials": {
            "type": "string",
            "description": "Name of the credentials set (as defined in the config) to use."
        },
        "vm-id": {
            "type": "string",
            "description": "ID of a VM to stop."
        },
        "user": {
            "immutable": true
        },
        "dir": {
            "immutable": true
        },
        "sudo": {
            "immutable": true
        },
        "parallel": {
            "immutable": true
        }
    },
    "required_parameters": ["credentials", "vm-id"]
}

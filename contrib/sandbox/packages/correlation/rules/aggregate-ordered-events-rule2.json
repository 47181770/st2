{
    "name": "aggregate-ordered-events-rule2",
    "description": "A sample rule that demonstrates chaining a series of triggers, rules, and actions.",

    "trigger": {
        "name": "st2.event"
    },

    "criteria": {
        "event_id": {
            "pattern": 2000,
            "type": "equals"
        }
    },

    "action": {
        "name": "local",
        "parameters": {
            "args": "echo \"{{ trigger.host }}_{{ trigger.event_id }}\""
        }
    },

    "enabled": true
}
